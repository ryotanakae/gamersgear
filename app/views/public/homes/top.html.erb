<div class="container">
  <div class='row'>

    <div class="col-2 border min-vh-100">
      <%= render 'layouts/categories' %>
    </div>
  
    <div class="col-8 px-0">
      <!--投稿一覧-->
      <div id="posts-list">
        <%= render 'public/posts/index', posts: @posts %>
      </div>
    </div>
  
    <div class="col-2 border min-vh-100">
      <!--ユーザー詳細-->
      <%= render 'public/users/info', user: @user %>
    </div>

  </div>
</div>