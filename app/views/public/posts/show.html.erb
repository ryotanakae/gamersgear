<div class="container">
  <div class="row">

  <div class="col-2 border min-vh-100">
    <p class="text-center pt-4">カテゴリ</p>
  </div>

  <div class="col-8 d-flex flex-column">
    
    <div class="d-flex justify-content-center mt-5">
      <%= image_tag @post.get_image, size:'500x350' %>
    </div>

    <div class="pt-4 d-flex justify-content-center">
      <div class="w-100">
        <table class="table table-borderless">
          <tr>
            <th>投稿者:<%= link_to @post.user.name, user_path(@post.user) %></th>
            <th><%= @post.title %></th>
            <th><%= link_to @post.category.name, posts_path(category_id: @post.category.id) %></th>
            <th><%= render 'star', post: @post %></th>
            <th>
              <% if @post.user == current_user || admin_signed_in? %>
                <td><%= link_to '編集する', edit_post_path(@post), class: "btn btn-secondary" %></td>
              <% end %>
            </th>
          </tr>
        </table>
      </div>
    </div>

    <div class="mt-3">
      <h5>Review</h5>
      <%= @post.body %>
    </div>
    
    <div class="mt-3">
      <p>コメント一覧</p>
    </div>
    
  <div>

  </div>
</div>
