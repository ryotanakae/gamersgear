<div class="container">
  <div class="row">
  
  <div class="col-2 border min-vh-100">
    <p class="text-center pt-4">カテゴリ</p>
  </div>
  
  <div class="col-7 d-flex flex-column">
    
    <div class="pt-4 d-flex justify-content-center">
      <div class="w-100">
         <table class="table table-borderless">
           <tr>
             <th style="width: 30%">Name：<%= link_to @post.user.name, user_path(@post.user) %></th>
             <th style="width: 30%">Title：<%= @post.title %></th>
             <th style="width: 30%"><%= render 'star', post: @post %></th>
          </tr>
        </table>
      </div>
    </div>
    
    <div>
      
      <div class="d-flex justify-content-center">
        <%= image_tag @post.get_image, size:'500x350' %>
      </div>
      
      <div class="text-right">
        <% if @post.user == current_user %>
          <td><%= link_to '編集する', edit_post_path(@post), class: "btn btn-secondary" %></td>
        <% end %>
      </div>
      
    </div>
    
    
      
    <div class="mt-3">
      <h5>Review</h5>
      <%= @post.body %>
    </div>
  </div>
  
  </div>
</div>
