<div class="container-fluid">
  <div class="row">
  
  <div class="col-2 mh-100">
    <p class="text-center pt-4">カテゴリ</p>
  </div>
  
  <div class="col-7 d-flex flex-column">
    
    <div class="pt-4 d-flex justify-content-center">
      <div class="w-75">
         <table class="table table-borderless">
           <tr>
             <th style="width: 30%">Name：<%= @post.user.name %></th>
             <th style="width: 30%">Title：<%= @post.title %></th>
             <th style="width: 30%"><%= render 'star', post: @post %></th>
          </tr>
        </table>
      </div>
    </div>
    
    <div class="d-flex justify-content-center">
      <div>
        <%= image_tag @post.get_image, size:'500x350' %>
      </div>
    </div>
    
    
      
    <div class="border">
      <h5>Review</h5>
      <%= @post.body %>
    </div>
  </div>
  
  </div>
</div>
