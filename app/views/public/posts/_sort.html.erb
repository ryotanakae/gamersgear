<%= form_with url: posts_path, method: :get, local: true do %>
  <div class="col-12 my-3 d-flex justify-content-end">
    <%= select_tag :sort, options_for_select([
      ['新着順', 'newest'], 
      ['古い順', 'oldest'], 
      ['評価の高い順', 'highest_rated'], 
      ['いいねの多い順', 'most_liked'],
      ['コメントの多い順', 'most_commented']
    ], params[:sort]) %>
    <%= submit_tag '並び替える' %>
  </div>
<% end %>