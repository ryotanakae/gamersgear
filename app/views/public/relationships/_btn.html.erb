<% if current_user.following?(@user) %>
  <%= form_with(model: [current_user, current_user.active_relationships.find_by(followed_id: @user.id)], local: true, method: :delete) do |f| %>
    <%= f.submit "フォローを外す", class: "btn btn-danger" %>
  <% end %>
<% else %>
  <%= form_with(model: [current_user, Relationship.new], local: true) do |f| %>
    <%= f.hidden_field :followed_id, value: @user.id %>
    <%= f.submit "フォローする", class: "btn btn-primary" %>
  <% end %>
<% end %>