<div class="container">

  <div class="row">
    <div class="col-8 offset-2 my-3">
      <h3 class="text-center">ログイン</h3>
    </div>
  </div>

  <div class="row d-flex justify-content-center">
    <div class="col-sm-4">
      <%= form_with model: @user, url: user_session_path do |f| %>

        <div class="field mb-1">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field mb-2">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログイン状態を保存" %>
          </div>
        <% end %>

        <div class="actions mt-1">
          <%= f.submit "ログイン", class: "btn btn-info btn-block" %>
        </div>

      <% end %>
      
      <div class="mt-2">
        <span>アカウントを作成する</span>
        <%= link_to "新規会員登録", new_user_registration_path, class: 'btn btn-secondary btn-block mt-2' %>
      </div>
      
      <div class="mt-2">
        <span>ゲストでログインする</span>
        <%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post, class: 'btn btn-warning btn-block mt-2' %>
      </div>
      
    </div>
  </div>

</div>