<table class='table'>
  
  <tr>
    <% if @user %>
      <%= image_tag @user.get_image, size: "100x100" %>
    <% else %>
      <%= image_tag "no_image.jpg" %>
    <% end %>
  </tr>
  
  <tr>
	  <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  
  <tr>
    <th>フォロー</th>
    <th><%= link_to @user.following.count, user_followings_path(@user) %></th>
  </tr>
  
  <tr>
    <th>フォロワー</th>
    <th><%= link_to @user.followers.count, user_followers_path(@user) %></th>
  </tr>
  
</table>

<div class='row'>
  <% if current_user == user %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>プロフィールを編集
    <% end %>
  <% else %>
    <td><%= render 'relationships/btn', user: @user %></td>
  <% end %>
</div>