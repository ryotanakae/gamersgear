<div class='container px-5 px-sm-0'>
  <div class='row'>

    <div class='col-md-3'>
      <div class="mt-3 text-center">
        <h4>プロフィール</h4>
      </div>
      <%= render 'public/users/info', user: @user %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <div class="mt-3 ml-2">
        <h4>投稿一覧</h4>
      </div>
      <div class="mt-5">
        <%= render 'public/posts/sort' %>
        <div id="posts-list">
          <%= render 'public/posts/index', posts: @posts %>
        </div>
      </div>
    </div>

  </div>
</div>

