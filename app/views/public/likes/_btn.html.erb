<% if current_user && !current_user.guest_user? %>

  <% if post.likes_by?(current_user) %>
    <%= link_to post_like_path(post, current_user.likes.find_by(post_id: post.id)), method: :delete do %>
      ♥<%= post.likes.count %>
    <% end %>
  <% else %>
    <%= link_to post_like_path(post), method: :post do %>
      ♡<%= post.likes.count %>
    <% end %>
  <% end %>
  
<% else %>

  <span>
    ♡<%= post.likes.count %>
  </span>
  
<% end %>