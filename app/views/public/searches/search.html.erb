<div class="container">
  
  <div class="row">
    <div class="col-8 offset-4 my-3">
      <h3>検索結果</h3>
    </div>
  </div>
  
  <% if @range == "User" %>
    
    <div class="row d-flex justify-content-center min-vh-100">
      <div class="col-9 px-0 min-vh-100">
        <% if @users.any? %>
          <%= render 'public/users/index', users: @users %>
        <% else %>
          <h5 class="pt-5 text-center">該当するユーザーが見つかりませんでした。</h5>
        <% end %>
      </div>
    </div>
      
  <% elsif @range == "Post" %>
  
    <% if @posts.any? %>
      <%= render 'public/posts/sort' %>
      <div id="posts-list">
        <%= render 'public/posts/index' %>
      </div>
    <% else %>
      <h5 class="pt-5 text-center">該当する投稿が見つかりませんでした。</h5>
    <% end %>
    
  <% end %>
</div>