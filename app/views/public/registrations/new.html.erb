<div class="container">
  
  <div class="row">
    <div class="col-8 offset-2 my-3">
      <h3 class="text-center">アカウントを作成</h3>
    </div>
  </div>
  
  <div class="row d-flex justify-content-center">
    <div class="col-sm-4">
      <%= form_with model: @user, url: user_registration_path do |f| %>
        
        <div class="field mb-1">
          <%= f.label :name, "ユーザー名" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
      
        <div class="field mb-1">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      
        <div class="field mb-1">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
      
        <div class="field">
          <%= f.label :password_confirmation, "パスワード（確認）" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
      
        <div class="actions mt-3">
          <%= f.submit "アカウントを作成", class: "btn btn-info btn-block" %>
        </div>
        
      <% end %>
      
      <div class="mt-2">
        <span>アカウントをお持ちの方はこちらから</span>
        <%= link_to "ログインページへ", new_user_session_path, class: 'btn btn-secondary btn-block mt-2' %>
      </div>
      
      <div class="mt-2">
        <span>ゲストでログインする</span>
        <span class="gest">（※閲覧のみ）</span>
        <%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post, class: 'btn btn-warning btn-block mt-2' %>
      </div>
      
    </div>
  </div>
  
</div>
