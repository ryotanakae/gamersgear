<div class="container">
  <div class="row">
    <div class="col">

      <h3 class="my-5"><%= @user.name %>さんの会員情報編集</h3>

      <%= form_with model: @user, url: admin_user_path(@user), local: true, method: :patch do |f| %>

        <div>

          <div>
            会員ID
            <%= @user.id %>
          </div>

          <div>
            ニックネーム
            <%= f.text_field :name %>
          </div>

          <div>
            <td>メールアドレス</td>
            <td><%= f.text_field :email %></td>
          </div>

          <div>
            会員ステータス
            <div>
              <%= f.radio_button :is_active, :true %>
              <%= f.label :is_active, "有効", { value: :true }  %>

              <%= f.radio_button :is_active, :false %>
              <%= f.label :is_active, "退会", { value: :false } %>
            </div>
          </div>

          <div>
            <td><%= f.submit "変更を保存", class:"btn btn-secondary" %></td>
          </div>

        </div>
      <% end %>
    </div>
  </div>
</div>
