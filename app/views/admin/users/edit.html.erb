<div class="container">

  <div class="row d-flex justify-content-center">
    <div class="col-4 mt-5 mb-3">
      <h4><%= @user.name %>さんの会員情報編集</h4>
    </div>
  </div>

  <div class="row d-flex justify-content-center mt-2">
    <div class="col-4">
      <%= form_with model: @user, url: admin_user_path(@user), local: true, method: :patch do |f| %>

        <div>

          <div class="mb-3">
            会員ID &ensp; <%= @user.id %>
          </div>

          <div>
            <%= f.label :name, "ニックネーム" %>
          </div>
          <div>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="mt-3">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div>
            <%= f.text_field :email, class: "form-control" %>
          </div>

          <div class="mt-3">
            <%= f.label :is_active, "会員ステータス", class: "pb-2" %>
            <div class="d-flex">
              <div>
                <%= f.radio_button :is_active, true %>
                <%= f.label :is_active_true, "有効", class: "pl-1" %>
              </div>

              <div class="ml-4">
                <%= f.radio_button :is_active, false %>
                <%= f.label :is_active_false, "退会", class: "pl-1"  %>
              </div>
            </div>
          </div>

          <div class="mt-2 d-flex">
            <%= f.submit "保存", class:"btn btn-secondary" %>
            <%= link_to "戻る", admin_root_path, class: "btn btn-secondary ml-auto" %>
          </div>

        </div>
      <% end %>
    </div>
  </div>

</div>
