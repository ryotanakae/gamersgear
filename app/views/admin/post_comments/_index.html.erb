<table class="table table-striped">

  <thead>
    <tr>
      <th class="col-2">タイトル</th>
      <th class="col-2">ユーザー名</th>
      <th class="col-6">コメント内容</th>
      <th class="col-2">投稿日時</th>
    </tr>
  </thead>

  <tbody>
    <% @post_comments.each do |comment| %>
      <tr>
        <td><%= link_to comment.post.title, post_path(comment.post) %></td>
        <td><%= link_to comment.user.name, user_path(comment.user) %></td>
        <td><%= comment.body %></td>
        <td><%= comment.created_at.strftime('%Y-%m-%d') %></td>
      </tr>
    <% end %>
  </tbody>

</table>