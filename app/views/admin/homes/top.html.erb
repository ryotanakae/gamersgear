<div class="container">

  <div class="mt-2">
    <h3>会員一覧</h3>
  </div>

  <table class="table table-striped">

    <thead>
      <tr>
        <th>ID</th>
        <th>名前</th>
        <th>メールアドレス</th>
        <th>登録日</th>
        <th>ステータス</th>
        <th>アクション</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to user.name, admin_user_path(user) %></td>
          <td><%= user.email %></td>
          <td><%= user.created_at.strftime('%Y-%m-%d') %></td>
          <td>
            <% if user.is_active %>
              <p class="text-black">有効</p>
            <% else %>
              <p class="text-danger">退会済み</p>
            <% end %>
          </td>
          <td>
            <%= link_to '編集する', edit_admin_user_path(user), class: 'btn btn-secondary' %>
          </td>
        </tr>
      <% end %>
    </tbody>

  </table>

</div>