<div class="container">
  
  <div class="row">
    <div class="col-8 offset-2 my-3">
      <h3 class="text-center">管理者ログイン</h3>
    </div>
  </div>
        
    <div class="row d-flex justify-content-center">
      <div class="col-sm-4">
      <%= form_with model: resource, url: admin_session_path, local: true do |f| %>
                
        <div class="field mb-1">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, size:"50%", autocomplete: "email", class: "form-control" %>
        </div>
                
        <div class="field mb-2">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, size:"50%", autocomplete: "current-password", class: "form-control" %>
        </dov>
                
        <div class="actions mt-3">
          <%= f.submit "ログイン", class: "btn btn-info btn-block" %>
        </div>
                
        <%= render "admin/shared/links" %>
            
      <% end %>
      </div>
    </div>
      
</div>
