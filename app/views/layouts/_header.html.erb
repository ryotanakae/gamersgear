<header>
  <nav class="navbar navbar-expand-lg", style="background-color: #f5da81">
    <div class="container">
      <a class="navbar-brand" href="/"><span class="text-dark">GamersGear</span></a>
      <div class="ml-auto">
        <div class="links">

          <ul class="navbar-nav">

            <% if user_signed_in? %>
              <!--ユーザーでログインしている時-->
              <li class="nav-item">
                <%= link_to user_path(current_user), class: 'nav-link text-dark' do %>
                  <i class="fas fa-home"></i> マイページ
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to new_post_path, class: 'nav-link text-dark' do %>
                  <i class="fa-solid fa-cart-shopping"></i> 投稿する
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to destroy_user_session_path, class: 'nav-link text-dark', method: :delete do %>
                  <i class="fas fa-sign-out-alt"></i> ログアウト
                <% end %>
              </li>

            <% elsif admin_signed_in? %>
              <!--管理者でログインしている時-->
              <li class="nav-item">
                <%= link_to admin_users_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-user-circle"></i> 会員一覧
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to admin_posts_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-cheese"></i></i> 投稿一覧
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to admin_categories_path, class: 'nav-link text-dark' do %>
                  <i class="fa-solid fa-rectangle-list"></i></i> カテゴリ一覧
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to destroy_admin_session_path, class: 'nav-link text-dark', method: :delete do %>
                  <i class="fas fa-sign-out-alt"></i> ログアウト
                <% end %>
              </li>

            <% else %>
              <!--ログインしていない時-->
              <li class="nav-item">
                <%= link_to about_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-link text"></i> About
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to new_user_registration_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-user-plus"></i></i> 新規登録
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to new_user_session_path, class: 'nav-link text-dark' do %>
                  <i class="fas fa-sign-in-alt"></i> ログイン
                <% end %>
              </li>

            <% end %>
          </ul>
        </div>

      </div>
    </div>
  </nav>
</header>