<!DOCTYPE html>
<html>
  <head>
    <title>Gamersgear</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/21474bdd09.js" crossorigin="anonymous"></script>
  </head>

  <body class="d-flex flex-column min-vh-100">
    <%= render 'layouts/header' %>
    <main>

      <% if flash[:notice] %>
        <div class="alert alert-success text-center"><%= flash[:notice] %></div>
      <% elsif flash[:alert] %>
        <div class="alert alert-danger text-center"><%= flash[:alert] %></div>
      <% end %>

      <%= yield %>

    </main>
    <%= render 'layouts/footer' %>
  </body>
</html>
